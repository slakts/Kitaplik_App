@model Kitaplik_Mvc.Models.Entities.Yazar
@using Kitaplik_Mvc.Models.Entities

@{
    ViewData["Title"] = "Yazar Güncelleme";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center">Yazar Bilgilerini Güncelle</h1>

    <form asp-action="Guncelle" method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Ad" class="form-label"></label>
            <input asp-for="Ad" class="form-control" id="ad" required />
            <div class="invalid-feedback">Ad alanı zorunludur.</div>
        </div>
        <div class="form-group mt-3">
            <label asp-for="Soyad" class="form-label"></label>
            <input asp-for="Soyad" class="form-control" id="soyad" required />
            <div class="invalid-feedback">Soyad alanı zorunludur.</div>
        </div>
        <div class="form-group mt-3">
            <label asp-for="DogumTarihi" class="form-label"></label>
            <input asp-for="DogumTarihi" type="date" class="form-control" id="dogumTarihi" required />
            <div class="invalid-feedback">Doğum tarihi alanı zorunludur.</div>
        </div>
        <div class="form-group mt-3">
            <label asp-for="Biyografi" class="form-label"></label>
            <textarea asp-for="Biyografi" class="form-control" id="biyografi" rows="4"></textarea>
        </div>
        <div class="form-group mt-4">
            <label for="kitaplar">Kitaplar</label>
            <ul class="list-group">
                @if (Model.Kitaplar != null && Model.Kitaplar.Any())
                {
                    foreach (var kitap in Model.Kitaplar)
                    {
                        <li class="list-group-item">
                            @kitap.Baslik
                        </li>
                    }
                }
                else
                {
                    <li class="list-group-item">Bu yazarın kitabı bulunmamaktadır.</li>
                }
            </ul>
        </div>
        <button type="submit" class="btn btn-success w-100 mt-4">Bilgileri Güncelle</button>
    </form>
</div>
