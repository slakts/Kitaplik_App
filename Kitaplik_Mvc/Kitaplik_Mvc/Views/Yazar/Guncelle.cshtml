@model Kitaplik_Mvc.Models.Entities.Yazar

@{
    ViewData["Title"] = "Guncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="center">
    <h1>Yazar Güncelle</h1>

    <form asp-action="Guncelle" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Ad"></label>
            <input asp-for="Ad" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Soyad"></label>
            <input asp-for="Soyad" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="DogumTarihi"></label>
            <input asp-for="DogumTarihi" type="date" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Biyografi"></label>
            <input asp-for="Biyografi" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </form>
</div>
