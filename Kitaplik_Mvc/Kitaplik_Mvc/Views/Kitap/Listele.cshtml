@{
    ViewData["Title"] = "Kitaplar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="center">
    <h1>Kitap Listesi</h1>

    <div class="search-container">
        <input type="text" id="searchInput" placeholder="Başlıkla Ara..." onkeyup="searchBooks()">
    </div>

    <table class="table" id="bookTable">
        <thead>
            <tr>
                <th>Görsel</th>
                <th>Başlık</th>
                <th>Yazar</th>
                <th>Yayın Tarihi</th>
                <th>ISBN</th>
                <th>Kategori</th>
                <th>Güncelle</th>
                <th>Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kitap in Model)
            {
                <tr onclick="selectBook(this)">
                    <td>
                        @if (!string.IsNullOrEmpty(kitap.Image))
                        {
                            <img src="@Url.Content($"~/Images/{kitap.Image}")" alt="Kitap Görseli" width="50">
                        }
                    </td>
                    <td>@kitap.Baslik</td>
                    <td>@kitap.Yazar?.Ad @kitap.Yazar?.Soyad</td> <!-- Display author's full name -->
                    <td>@kitap.YayinTarihi.ToShortDateString()</td>
                    <td>@kitap.ISBN</td>
                    <td>@kitap.Kategori?.Adi</td> <!-- Assuming Kategori has a 'Adi' property -->
                    <td>
                        <a href="@Url.Action("Guncelle", "Kitap", new { id = kitap.KitapID })"
                           class="btn btn-primary">Güncelle</a>
                    </td>
                    <td>
                        <a href="@Url.Action("Sil", "Kitap", new { id = kitap.KitapID })"
                           class="btn btn-danger">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-right">
        <a href="@Url.Action("Ekle", "Kitap")" class="btn btn-success">Kitap Ekle</a>
    </div>
</div>

<script>
    // Search books by title
    function searchBooks() {
        var input = document.getElementById("searchInput");
        var filter = input.value.toUpperCase();
        var table = document.getElementById("bookTable");
        var tr = table.getElementsByTagName("tr");

        for (var i = 1; i < tr.length; i++) {
            var td = tr[i].getElementsByTagName("td")[0]; // Başlık column
            if (td) {
                var txtValue = td.textContent || td.innerText;
                tr[i].style.display = txtValue.toUpperCase().indexOf(filter) > -1 ? "" : "none";
            }
        }
    }

    // Highlight selected book row
    function selectBook(row) {
        var rows = document.getElementsByTagName("tr");
        for (var i = 1; i < rows.length; i++) {
            rows[i].style.backgroundColor = ""; // Clear previous selection
        }
        row.style.backgroundColor = "#f2f2f2"; // Highlight selected row
    }
</script>
