@model Kitaplik_Mvc.Models.Entities.Uye

@{
    ViewData["Title"] = "Guncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="center">
    <h1>Üye Güncelle</h1>

    <form asp-action="Guncelle" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Ad"></label>
            <input asp-for="Ad" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Soyad"></label>
            <input asp-for="Soyad" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Sifre"></label>
            <input asp-for="Sifre" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Adres"></label>
            <input asp-for="Adres" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="TelefonNumarasi"></label>
            <input asp-for="TelefonNumarasi" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Güncelle</button>
    </form>
</div>
