@model Kitaplik_Mvc.Models.Entities.Odunc

@{
    ViewData["Title"] = "Ödünç Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h1>Ödünç Güncelle</h1>

            <form asp-controller="Odunc" asp-action="Guncelle" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="OgrenciID">Öğrenci ID</label>
                    <input asp-for="OgrenciID" class="form-control" />
                </div>

                <div class="form-group">
                    <label asp-for="KitapID"> Kitap Adı </label>
                    <select asp-for="KitapID" asp-items="ViewBag.KitapList" class="form-control"></select>
                </div>

                <div class="form-group">
                    <label asp-for="OduncAlimTarihi"> Ödünç Alma Tarihi </label>
                    <input asp-for="OduncAlimTarihi" class="form-control" type="date" />
                </div>

                <div class="form-group">
                    <label asp-for="IadeTarihi"> İade Tarihi </label>
                    <input asp-for="IadeTarihi" class="form-control" type="date" />
                </div>

                <button type="submit" class="btn btn-success">Güncelle</button>
            </form>
        </div>
    </div>
</div>
