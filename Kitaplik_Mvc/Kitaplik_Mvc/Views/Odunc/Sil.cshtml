@using Kitaplik_Mvc.Models.Entities
@model Odunc

<div class="container">
    <div class="row pt-3 pb-4">
        <h1>Ödünç Kaydını Sil</h1>
    </div>

    <h3>@Model.Uye.Ad @Model.Uye.Soyad tarafından alınan "@Model.Kitap.Baslik" kitabını silmek istediğinize emin misiniz?</h3>

    <form asp-controller="Odunc" asp-action="Sil" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-controller="Odunc" asp-action="Listele" class="btn btn-secondary">İptal</a>
    </form>
</div>
